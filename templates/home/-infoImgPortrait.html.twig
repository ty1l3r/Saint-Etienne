<div class="card border-dark" id="infoImgPortrait"
    style="background-color: #ffffff;margin-top: 10px;margin-right: 0px;">
    <div class="card-body">
        <div class="row" style="margin-top: 20px;">

            <div class=" 
            col-lg-6
            col-xl-5
            col-md-6
            col-sm-12
            d-flex 
            d-sm-flex 
            d-lg-flex 
            d-xl-flex 
            justify-content-center 
            justify-content-sm-center 
            justify-content-lg-center 
            align-items-lg-center 
            justify-content-xl-center 
            order-2" style="margin-top: 8px;margin-bottom: 10px;">
                <img class="img-fluid img-responsive" src="{{app.request.basepath}}/uploads/img/{{renduAll.imageName}}" style="width:500px"
                    onclick="window.open(this.src,'_blank','toolbar=0, location=0, directories=0, status=0, scrollbars=0, resizable=0, copyhistory=0, menuBar=0, width='+this.width+', height='+this.height);" />
            </div>

            <div class="
            col-sm-12
            col-lg-6
            col-xl-7
            col-md-6
            order-1
            ">
                <h4 class="text-primary"
                    style="font-family: 'Roboto Condensed', sans-serif;color: rgb(18,64,111);margin-bottom: -3px;">
                    {{renduAll.title}}</h4>
                <h4 class="text-primary"
                    style="font-family: 'Roboto Condensed', sans-serif;color: rgb(0,0,0);font-size: 12px;">posté le
                    {{renduAll.createdAt | date('d/m/Y')}} à {{renduAll.createdAt | date('H:i')}}</h4>
                <hr />
                <h6 class="text-secondary mb-2"
                    style="font-family: 'Roboto Condensed', sans-serif;color: rgb(24,133,230);margin-bottom: 64px;padding-right: 15px;">
                    <strong>{{renduAll.subtitle}}</strong></h6>
                <p class="" id="content"
                    style="margin-bottom: 7px;padding: 10px;padding-right: 10px;margin-right: 15px;">
                    {{renduAll.content  |raw |nl2br}}<br /></p>
            </div>
        </div>
    </div>
</div>