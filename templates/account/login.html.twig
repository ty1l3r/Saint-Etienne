
{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}



        {% include "partials/menu1.html.twig" %}

        <div class="row" style="margin-right: 15px;margin-left: 15px;margin-top:15%">
            <div class="col">

                {% if hasError %}
                <div class="alert alert-danger" style="margin-left:100px; margin-right: 100px">Le nom d'utilisateur ou le mot de passe est invalide ! </div>
                {% endif %}

                <div class="login-card"><img class="profile-img-card" src="../img/avatar_2x.png">
                    <p class="profile-name-card"> </p>
              
                    <form action=" {{ path('account_login') }} " method="post">
                        <div class="form-group">

                            <input type="text" name="_username" id="email" class="form-control"
                                placeholder="Adresse email" required value="{{username}}">
                        </div>
                        <div class="form-group">

                            <input type="password" name="_password" id="password" class="form-control"
                                placeholder="Mot de passe" required>
                        </div>
                        <div class="form-group">
                            <div class="form-check"><input class="form-check-input" type="checkbox"
                                    id="formCheck-1"><label class="form-check-label" for="formCheck-1">Remember
                                    me</label></div>

                            <button type="submit" class="btn btn-primary btn-block btn-lg btn-signin"> Connexion
                            </button>
                            <a class="forgot-password" href="#">Forgot your password?</a>
                        </div>
                </div>
                </form>


                <div class="col-md-3 col-xl-2 order-2 order-sm-2 order-md-3 order-lg-2 order-xl-3" id="colDroite"
                    style="padding: 0px;">
                    <p></p>
                </div>
            </div>
        </div>

            {% endblock %}